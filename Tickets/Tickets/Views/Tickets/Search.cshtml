@model ConcertTickets.Models.SearchTicketViewModel

@{
    ViewData["Title"] = "Inicio";
}

<h1 style="text-align:center;">Sistema de boletería</h1>

<hr />
<div class="row" style="text-align:center;">
    <div class="col-md-4 offset-4">
        <form asp-controller="Tickets" asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>ID de la boleta:</h2>
            <input asp-for="Id" class="form-control"/>
            <span asp-validation-for="Id" class="text-danger"></span>
            <div class="form-group mt-2">
                <input type="submit" value="Consultar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}