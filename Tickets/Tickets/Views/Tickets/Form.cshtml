@model ConcertTickets.Models.TicketViewModel

@{
    ViewData["Title"] = "Asignar boleta";
}

<h1 style="text-align:center;">BOLETAS DEL CONCIERTO</h1>

<hr />
<div class="row" style="text-align:center;">
    <div class="col-md-4 offset-4">
        <form asp-controller="Tickets" asp-action="Form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Document" class="control-label"></label>
                <input asp-for="Document" class="form-control" />
                <span asp-validation-for="Document" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntranceId" class="control-label"></label>
                <select asp-for="EntranceId" asp-items="Model.Entrances" class="form-control"></select>
                <span asp-validation-for="EntranceId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Reservar" class="btn btn-outline-primary" />
                <a class="btn btn-outline-success" asp-action="Search">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}